root = true

[*]
end_of_line = lf

[*.{java,xml}]
charset = utf-8
indent_style = tab
indent_size = 4
continuation_indent_size = 8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{sql,js,jsx,html,sass,scss,css}]
charset = utf-8
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
insert_final_newline = true
