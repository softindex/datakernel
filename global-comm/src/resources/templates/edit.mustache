{{<base}}
    {{$content}}
        <div class="container">
            <div class="card">
                <div class="card-header text-center font-weight-bold">Edit app</div>
                <div class="card-body">
                    <form class="validate" action="/admin/edit" method="post" novalidate>
                        <div class="col-sm-8 mx-auto">
                            <div class="form-row mb-2">
                                <input class="form-control"
                                       name="title"
                                       type="text" value="{{forum.title}}"
                                       placeholder="App title"
                                       pattern="\s*(?=\S).{1,60}\s*">
                            </div>
                            <div class="form-row mb-2">
                                <textarea class="form-control"
                                          name="description"
                                          data-post-button="#save"
                                          placeholder="App description">{{forum.description}}</textarea>
                            </div>
                            <div class="form-row justify-content-center">
                                <div class="col-4">
                                    <button id="save" class="btn btn-block btn-primary">Save</button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    {{/content}}
{{/base}}
