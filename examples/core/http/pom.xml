<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>io.datakernel</groupId>
    <artifactId>core</artifactId>
    <version>3.2-SNAPSHOT</version>
    <relativePath>../pom.xml</relativePath>
  </parent>

  <artifactId>http</artifactId>
  <name>Examples : Core : Http</name>

  <dependencies>
    <dependency>
      <groupId>io.datakernel</groupId>
      <artifactId>datakernel-launchers-http</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>com.github.spullara.mustache.java</groupId>
      <artifactId>compiler</artifactId>
      <version>0.9.4</version>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>HttpServerWorkloadBenchmark</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>HttpServerWorkloadBenchmark</mainClass>
            </configuration>
          </execution>
          <execution>
            <id>HttpClientExample</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>HttpClientExample</mainClass>
            </configuration>
          </execution>
          <execution>
            <id>HttpMultithreadedServerExample</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>HttpMultithreadedServerExample</mainClass>
            </configuration>
          </execution>
          <execution>
            <id>HttpRoutingServletExample</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>HttpRoutingServletExample</mainClass>
            </configuration>
          </execution>
          <execution>
            <id>HttpRequestParameterExample</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>HttpRequestParameterExample</mainClass>
            </configuration>
          </execution>
          <execution>
            <id>HttpStaticServletExample</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>HttpStaticServletExample</mainClass>
            </configuration>
          </execution>
          <execution>
            <id>HttpBlockingServletExample</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>HttpBlockingServletExample</mainClass>
            </configuration>
          </execution>
          <execution>
            <id>HttpFileUploadExample</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>HttpFileUploadExample</mainClass>
            </configuration>
          </execution>
          <execution>
            <id>HttpHelloWorldExample</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>HttpHelloWorldExample</mainClass>
            </configuration>
          </execution>
          <execution>
            <id>HttpServerScratch</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>HttpServerScratch</mainClass>
            </configuration>
          </execution>
          <execution>
            <id>HttpServletDecoratorExample</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>HttpServletDecoratorExample</mainClass>
            </configuration>
          </execution>
          <execution>
            <id>HttpParamParserExample</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>HttpParamParserExample</mainClass>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

</project>
