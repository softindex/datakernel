<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>io.datakernel</groupId>
    <artifactId>core</artifactId>
    <version>3.0.0-SNAPSHOT</version>
    <relativePath>../pom.xml</relativePath>
  </parent>

  <artifactId>net</artifactId>
  <name>Examples : Core : Net</name>

  <dependencies>
    <dependency>
      <groupId>io.datakernel</groupId>
      <artifactId>datakernel-net</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>io.datakernel</groupId>
      <artifactId>datakernel-csp</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>io.datakernel</groupId>
      <artifactId>datakernel-datastream</artifactId>
      <version>${project.version}</version>
      <scope>compile</scope>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>PingPongSocketConnection</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>PingPongSocketConnection</mainClass>
            </configuration>
          </execution>
          <execution>
            <id>datastream.TcpClientExample</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>datastream.TcpClientExample</mainClass>
            </configuration>
          </execution>
          <execution>
            <id>datastream.TcpServerExample</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>datastream.TcpServerExample</mainClass>
            </configuration>
          </execution>
          <execution>
            <id>csp.TcpClientExample</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>CspTcpClientExample</mainClass>
            </configuration>
          </execution>
          <execution>
            <id>TcpEchoServerExample</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>CspTcpServerExample</mainClass>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

</project>
