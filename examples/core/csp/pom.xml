<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>io.datakernel</groupId>
    <artifactId>core</artifactId>
    <version>3.2-SNAPSHOT</version>
    <relativePath>../pom.xml</relativePath>
  </parent>

  <artifactId>csp</artifactId>
  <name>Examples : Core : CSP</name>

  <dependencies>
    <dependency>
      <groupId>io.datakernel</groupId>
      <artifactId>datakernel-csp</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>io.datakernel</groupId>
      <artifactId>datakernel-di</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>io.datakernel</groupId>
      <artifactId>datakernel-launcher</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>io.datakernel</groupId>
      <artifactId>datakernel-servicegraph</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>io.datakernel</groupId>
      <artifactId>datakernel-config</artifactId>
      <version>${project.version}</version>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <executions>
          <execution>
            <id>CspByteBufsParserExample</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>CspByteBufsParserExample</mainClass>
            </configuration>
          </execution>
          <execution>
            <id>CspChannelExample</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>CspChannelExample</mainClass>
            </configuration>
          </execution>
          <execution>
            <id>CspChannelFileExample</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>CspChannelFileExample</mainClass>
            </configuration>
          </execution>
          <execution>
            <id>CspExample</id>
            <goals>
              <goal>java</goal>
            </goals>
            <configuration>
              <mainClass>CspExample</mainClass>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

</project>
