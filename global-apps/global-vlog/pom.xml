<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <parent>
    <artifactId>global-apps</artifactId>
    <groupId>io.datakernel</groupId>
    <version>3.2-SNAPSHOT</version>
  </parent>
  <modelVersion>4.0.0</modelVersion>

  <artifactId>global-vlog</artifactId>

  <name>Global vlog</name>

  <dependencies>
    <dependency>
      <groupId>io.datakernel</groupId>
      <artifactId>global-comm</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>io.datakernel</groupId>
      <artifactId>global-apps-common</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>io.datakernel</groupId>
      <artifactId>global-launchers</artifactId>
      <version>${project.version}</version>
    </dependency>
    <dependency>
      <groupId>com.vladsch.flexmark</groupId>
      <artifactId>flexmark-all</artifactId>
      <version>0.50.40</version>
    </dependency>
    <dependency>
      <groupId>org.imgscalr</groupId>
      <artifactId>imgscalr-lib</artifactId>
      <version>4.2</version>
    </dependency>
    <dependency>
      <groupId>org.bytedeco</groupId>
      <artifactId>javacv-platform</artifactId>
      <version>1.5.2</version>
    </dependency>
  </dependencies>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-compiler-plugin</artifactId>
        <configuration>
          <source>8</source>
          <target>8</target>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>exec-maven-plugin</artifactId>
        <configuration>
          <mainClass>io.datakernel.vlog.GlobalVlogApp</mainClass>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-shade-plugin</artifactId>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <artifactSet>
                <excludes>
                  <exclude>org.bytedeco:libdc1394:*</exclude>
                  <exclude>org.bytedeco:tesseract:*</exclude>
                  <exclude>org.bytedeco:flandmark:*</exclude>
                  <exclude>org.bytedeco:artoolkitplus:*</exclude>
                  <exclude>org.bytedeco:libfreenect:*</exclude>
                  <exclude>org.bytedeco:libfreenect2:*</exclude>
                  <exclude>org.bytedeco:openblas-platform:*</exclude>
                  <exclude>org.bytedeco:flycapture:*</exclude>
                  <exclude>org.bytedeco:leptonica:*</exclude>
                  <exclude>org.bytedeco:tesseract-platform:*</exclude>
                  <exclude>org.bytedeco:*:jar:macosx-x86*</exclude>
                  <exclude>org.bytedeco:*:jar:windows-x86*</exclude>
                  <exclude>org.bytedeco:*:jar:android*</exclude>
                  <exclude>org.bytedeco:*:jar:ios*</exclude>
                </excludes>
              </artifactSet>
              <transformers>
                <transformer
                  implementation="org.apache.maven.plugins.shade.resource.ManifestResourceTransformer">
                  <mainClass>io.datakernel.vlog.GlobalVlogApp</mainClass>
                </transformer>
              </transformers>
              <finalName>app</finalName>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
</project>
