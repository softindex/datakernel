{{<base}}
    {{$content}}
        <div class="container">
            <h3 class="text-center">Profile:</h3>

            <form class="m-2" action="/private/profile/{{userId}}" method="post">
                <div class="form-group row">
                    <div class="col-sm-2 col-form-label">Username</div>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="username" name="username" placeholder="Username" maxlength="16"
                               value="{{shownUser.username}}" required>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-2 col-form-label">Email</div>
                    <div class="col-sm-10">
                        <input type="text" class="form-control" id="email" name="email" placeholder="Email" maxlength="64"
                               value="{{shownUser.email}}" required>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-sm-2 col-form-label">Real name</div>
                    <div class="col col-sm-5">
                        <input class="form-control" type="text" name="firstName" placeholder="First name" maxlength="64"
                               value="{{shownUser.firstName}}">
                    </div>
                    <div class="col col-sm-5">
                        <input class="form-control" type="text" name="lastName" placeholder="Last name" maxLength="64"
                               value="{{shownUser.lastName}}">
                    </div>
                </div>

                <div class="row">
                    <button class="btn btn-lg btn-primary mx-auto" type="submit">Save</button>
                </div>
            </form>
        </div>
    {{/content}}
{{/base}}
