{{<base}}
    {{$content}}
        <div class="container">
            <div class="card">
                <div class="card-header py-1">
                    {{>thread_title}}
                </div>
                <div class="card-body">
                    <div class="mb-3 ml-3 text-center">
                        <a class="text-secondary" href="/{{thread.threadId}}">view the whole thread</a>
                    </div>
                    {{#post}}
                        {{>render_post}}
                    {{/post}}
                </div>
            </div>
        </div>
        <div style="height: 50vh"></div>
        {{>image_modal}}
        {{>video_modal}}
    {{/content}}
{{/base}}
